<!-- Loop over each object in the projects array -->
{{#each projects}}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      
            <a href="/project/{{this.id}}">{{this.name}}</a>
        </h2>
       
        <p>Created by {{this.user.name}} on {{format_date this.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{this.description}}
        </p>
    </div>
</div>
{{/each}}